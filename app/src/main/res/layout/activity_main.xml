<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/AddthisID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>
    <EditText android:id="@+id/BId" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/AddthisTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>
    <EditText android:id="@+id/BTitle" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/AddthisArtist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>
    <EditText android:id="@+id/BArtist" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/AddThisYear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="year"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>
    <EditText android:id="@+id/BYear" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Add"/>

    <Button
            android:id="@+id/Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Search"/>

    <Button
            android:id="@+id/Uptade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Update"/>

    <Button
            android:id="@+id/Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Delete"/>


</LinearLayout>

